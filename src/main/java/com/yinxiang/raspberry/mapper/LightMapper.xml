<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yinxiang.raspberry.mapper.LightMapper">
    <resultMap id="LightMap" type="com.yinxiang.raspberry.bean.Light">
        <result column="device_id" property="device_id" />
        <result column="create_time" property="create_time" />
        <result column="luminance" property="luminance" />
    </resultMap>

    <!--光照强度数据的列名-->
    <sql id="Column">
        device_id, create_time, luminance
    </sql>
    <!--光照强度数据的表名-->
    <sql id="Table">
        light_intensity
    </sql>

    <!--1.获取单个设备的历史光照强度数据数目-->
    <select id="findCountById" resultType="java.lang.Long" parameterType="java.lang.String">
        select count(*)
        from
        <include refid="Table"></include>
        where device_id = #{device_id}
    </select>

    <!--2.获取所有设备的历史光照强度数据数目-->
    <select id="findAllCount" resultType="java.lang.Long">
        select count(*)
        from
        <include refid="Table"></include>
    </select>

    <!--3.获取所有设备的最新光照强度数据数目-->
    <select id="findAllCountLatest" resultType="java.lang.Long">
        select count(*)
        from
        (select device_id from <include refid="Table"></include> group by device_id) a
    </select>

    <!--4.获取单个设备的历史光照强度数据并且可分页-->
    <select id="findDataByIdAndPage" resultMap="LightMap" parameterType="java.util.Map">
        select
        <include refid="Column" />
        from
        <include refid="Table"></include>
        where device_id = #{device_id} order by create_time desc
        limit #{currentPage},#{pageSize}
    </select>

    <!--5.获取单个设备的最新光照强度数据-->
    <select id="findLatestDataById" resultType="com.yinxiang.raspberry.bean.Light" parameterType="java.lang.String">
        select
        <include refid="Column"></include>
        from
        <include refid="Table"></include>
        where device_id = #{device_id}
        order by create_time desc
        limit 1
    </select>

    <!--6.获取所有设备的历史光照强度数据并且分页-->
    <select id="findAllDataByPage" resultMap="LightMap" parameterType="java.util.Map">
        select
        <include refid="Column"></include>
        from
        <include refid="Table"></include> limit #{currentPage},#{pageSize}
    </select>

    <!--7.获取所有设备的最新光照强度数据并且分页-->
    <select id="findAllLatestDataByPage" resultMap="LightMap" parameterType="java.util.Map">
        select a.*
        from
        <include refid="Table"></include>a,
        (select device_id, max(create_time) as create_time from <include refid="Table"></include> group by device_id) b
        where a.create_time = b.create_time and a.device_id = b.device_id
        limit #{currentPage},#{pageSize}
    </select>

    <!--8.新增设备的光照强度数据-->
    <insert id="saveData" parameterType="com.yinxiang.raspberry.bean.Light">
        insert into
        <include refid="Table"></include>
        (<include refid="Column"></include>)
        VALUES
        (#{device_id},#{create_time},#{luminance})
    </insert>

    <!--9.修改设备的光照强度数据-->
    <update id="modifyData" parameterType="com.yinxiang.raspberry.bean.Light">
        update
        <include refid="Table"></include>
        set
        <if test="create_time!=null">
            create_time = #{create_time},
        </if>
        <if test="luminance!=null">
            luminance = #{luminance},
        </if>
        where
        device_id = #{device_id} and create_time = #{create_time}
    </update>

    <!--10.删除设备的光照强度数据-->
    <delete id="deleteData" parameterType="java.lang.String">
        delete from
        <include refid="Table"></include>
        where
        device_id = #{device_id}
    </delete>
</mapper>